<div id="divReport" class="container-fluid">
  Total records found: <%= backlogs.length %>
  <div class="table-responsive">         
  <table class="table table-bordered table-hover">
    <tbody>
    <% backlogs.forEach(function(backlog){ %>
      <tr>
      	<td>
        	<table style="width:100%;" border="0">
          	<tbody>
                <tr>
                  <td align="right" style="width:15%;font-weight:bold;padding-right:20px;">
                    REF #:
                  </td>
                  <td colspan="3">
                    <%=  backlog._id.substr(backlog._id.length - 4) %>
                  </td>
                </tr>
                <tr>
                  <td align="right" style="width:15%;font-weight:bold;padding-right:20px;">
                  	Backlog Date:
                  </td>
                  <td style="width:35%;">
                    <%= moment(backlog.insertdate).format('MM/DD/YYYY h:mm:ss a') %>
                  </td>
                  <td align="right" style="width:10%;font-weight:bold;">
                  	Person:
                  </td>
                  <td style="padding-left:20px;"> 
                    <%= backlog.person %>
                  </td>
                </tr>
                 <tr>
                  <td align="right" style="font-weight:bold;padding-right:20px;">
                  	Functional Area:
                  </td>
                  <td>
                    <%= backlog.functionalarea %>
                  </td>
                  <td align="right" style="font-weight:bold;width:15%;">
                    Resolved Date:
                  </td>
                  <td style="padding-left:20px;">
                    <% if (backlog.resolveddate != null) { %> 
                      <%= moment(backlog.resolveddate).format('MM/DD/YYYY') %> 
                    <% } %>
                  </td>
                </tr>
                <tr>
                	<td align="right" style="font-weight:bold;padding-right:20px;">
                  	Idea:
                  </td>
                  <td colspan="3">
                    <%- backlog.idea.replace(/(\r\n|\n|\r)/g,"<br />"); %>
                  </td>
                </tr>
                <!--<tr>
                  <td colspan="4" style="padding-top:0px;">
                    <hr />
                  <td>
                </tr> -->
                
              </tbody>
            </table>
        </td>
        <td style="width:5%; vertical-align: middle !important;">
            <button style="padding-top:5px !important;padding-bottom:5px;" class="btn btn-primary" data-toggle="modal" data-target="#mdlViewDetails" data-backlogid="<%= backlog._id %>" href="#">View Details</button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
</div>